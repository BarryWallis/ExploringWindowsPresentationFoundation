<Window x:Class="CalculateAreaWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculateAreaWpf"
        mc:Ignorable="d"
        Title="Calculate Area"
        Height="450"
        Width="800">
    <StackPanel Orientation="Vertical"
                VerticalAlignment="Center">
        <Button x:Name="TriangleAreaButton"
                Content="Triangle Area" Click="TriangleAreaButton_Click"    
                Margin="10"
                Width="100" />
        <Button x:Name="RectangleAreaButton"
                Content="Rectangle Area" Click="RectangleAreaButton_Click"
                Margin="10"
                Width="100" />
        <Button x:Name="TrapezoidAreaButton"
                Content="Trapezoid Area" Click="TrapezoidAreaButton_Click"
                Margin="10"
                Width="100" />
    </StackPanel>
</Window>
